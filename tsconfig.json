{
	"compilerOptions": {
		"strict": true,
		"target": "esnext",
		"module": "nodenext",
		"declaration": true,
		"rootDir": ".",
		"outDir": "build",
		"moduleResolution": "Node16",
		"allowSyntheticDefaultImports": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/*.ts", "test/*.ts"]
}
